<Window x:Class="RRecord.SnipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"  
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Cursor="Cross"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Canvas x:Name="SnipCanvas"
            MouseLeftButtonDown="SnipCanvas_MouseLeftButtonDown"
            MouseMove="SnipCanvas_MouseMove"
            MouseLeftButtonUp="SnipCanvas_MouseLeftButtonUp"
            MouseRightButtonDown="SnipCanvas_MouseRightButtonDown"
            Background="Transparent">

        <Rectangle x:Name="SelectionRect"
                   Stroke="White"
                   StrokeThickness="2"
                   Fill="#20FFFFFF"
                   Visibility="Collapsed" />
    </Canvas>
</Window>
